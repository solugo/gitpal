<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.* ?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <ToolBar styleClass="toolbar">
            <Button fx:id="refreshButton" style="-fx-graphic: url('icon:refresh.svg?size=24');">
                <tooltip>
                    <Tooltip text="Refresh" />
                </tooltip>
            </Button>
            <Separator />
            <Button fx:id="pushButton" style="-fx-graphic: url('icon:push.svg?size=24');">
                <tooltip>
                    <Tooltip text="Push" />
                </tooltip>
            </Button>
            <Button fx:id="pullButton" style="-fx-graphic: url('icon:pull.svg?size=24');">
                <tooltip>
                    <Tooltip text="Pull" />
                </tooltip>
            </Button>
            <Button fx:id="fetchButton" style="-fx-graphic: url('icon:fetch.svg?size=24');">
                <tooltip>
                    <Tooltip text="Fetch" />
                </tooltip>
            </Button>
            <Separator />
            <Button fx:id="revertButton" style="-fx-graphic: url('icon:revert.svg?size=24');">
                <tooltip>
                    <Tooltip text="Revert" />
                </tooltip>
            </Button>
            <Button fx:id="stashButton" style="-fx-graphic: url('icon:stash.svg?size=24');">
                <tooltip>
                    <Tooltip text="Stash" />
                </tooltip>
            </Button>
        </ToolBar>
    </top>
    <center>
        <HBox>
            <TreeView fx:id="treeView" prefWidth="200" />
            <StackPane fx:id="contentPane" HBox.hgrow="ALWAYS"  />
        </HBox>
    </center>
</BorderPane>

